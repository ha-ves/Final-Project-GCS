<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TugasAkhir_GCS.MainPage"
             WidthRequest="450">
    <Grid VerticalOptions="FillAndExpand" RowDefinitions="*,10*">
        <Frame Grid.Row="0" BackgroundColor="#FFFFFF" Margin="-2,-30,-2,-2" Padding="0,40,0,0" CornerRadius="24"/>
        <Frame Grid.Row="0" BackgroundColor="#00879D" Margin="0,-32,0,0" Padding="0,40,0,0" CornerRadius="24"/>
        <Grid Grid.Row="0" ColumnDefinitions="2*,3*">
            <StackLayout Grid.Column="0" Orientation="Horizontal" VerticalOptions="Center" Margin="20,0">
                <Label Grid.Column="0" Text="Final Project GCS" FontFamily="Bebas Neue" FontSize="Header" HorizontalOptions="Center"/>
                <Button Grid.Column="1" Text="disconnected" FontFamily="UD Digi Kyokasho NP-B" CornerRadius="8" BackgroundColor="Red" TextTransform="Uppercase" HorizontalOptions="FillAndExpand"/>
            </StackLayout>
            <StackLayout Grid.Column="1" Orientation="Horizontal" VerticalOptions="CenterAndExpand">
                <Frame BorderColor="White" Padding="5"  HorizontalOptions="FillAndExpand">
                    <Label Text="manual mode" FontFamily="UD Digi Kyokasho NP-B" TextTransform="Uppercase" HorizontalOptions="CenterAndExpand"/>
                </Frame>
                <Label Text="t+00:00:00" FontFamily="UD Digi Kyokasho NP-B" TextTransform="Uppercase" HorizontalOptions="CenterAndExpand"/>
                <Label Text="rssi 100%" FontFamily="UD Digi Kyokasho NP-B" TextTransform="Uppercase" HorizontalOptions="CenterAndExpand"/>
                <Label Text="batt 100%" FontFamily="UD Digi Kyokasho NP-B" TextTransform="Uppercase" HorizontalOptions="CenterAndExpand"/>
            </StackLayout>
        </Grid>
    </Grid>
</ContentPage>
